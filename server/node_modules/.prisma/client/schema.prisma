generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Exercise {
  exercise_name String   @db.VarChar
  set_id        BigInt
  lift_date     DateTime @db.Date
  reps          Int?     @db.SmallInt
  weight        Float?
  unit          String?  @db.VarChar
  email         String   @db.VarChar
  Lift          Lift     @relation(fields: [lift_date, email], references: [lift_date, email], onDelete: Cascade)

  @@id([exercise_name, set_id, lift_date, email])
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Lift {
  lift_date  DateTime   @db.Date
  lift_title String     @db.VarChar
  email      String     @db.VarChar
  Exercise   Exercise[]
  User       User       @relation(fields: [email], references: [email], onDelete: Cascade)

  @@id([lift_date, email])
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Run {
  run_title String   @db.VarChar
  run_date  DateTime @db.Date
  distance  Float?
  time      Float?
  pace      Float?
  notes     String?  @db.VarChar
  unit      String?  @db.VarChar
  email     String   @db.VarChar
  User      User     @relation(fields: [email], references: [email], onDelete: Cascade)

  @@id([run_date, email])
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model User {
  email        String  @id @db.VarChar
  password     String  @db.VarChar
  phone_number String? @db.VarChar
  name         String? @db.VarChar
  Lift         Lift[]
  Run          Run[]
}
